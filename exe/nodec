#!/usr/bin/env ruby

require "node/compiler"

module Node

  usage = %Q{

nodec v#{Compiler::VERSION}

Usage:
  nodec [module_name] [module_version] [bin_name] [output_path]

E.g.:
  nodec coffee-script 1.11.1 coffee /tmp/coffee-1.11.1-darwin-x64

Supported Node.js version:
  #{Compiler.node_version}

  }.strip

  if 2 == ARGV.size && 'test' == ARGV[1]
    instance = Compiler.new ARGV[0]
    instance.test!
    exit 0
  end

  unless 5 == ARGV.size
    puts usage
    exit 1
  end

  begin
    instance = Compiler.new *ARGV
    instance.run!
    instance.clean_work_dir unless ENV['ENCLOSE_IO_KEEP_WORK_DIR']
  rescue Compiler::Error => e
    STDERR.puts e.message
    exit 2
  end
  
end
